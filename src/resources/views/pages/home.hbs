<div class='pt-4'>
  <div class='row'>
    {{#each courses}}
    <div class='col-sm-6 col-lg-4'>
      <div class='card mb-4' style='height: 440px;'>
        <a href='/courses/{{this.slug}}'>
          <img class='card-img-top' style='height: 186px' src='{{this.image}}' alt='{{this.image}}' />
        </a>

        <div class='card-body d-flex flex-column justify-content-between'>
          <div>
            <a href='/courses/{{this.slug}}'>
              <h5 class='card-title'>{{this.name}}</h5>
            </a>

            <p class='card-text'>{{this.description}}</p>
          </div>

          <a href='#' class='btn btn-primary'>Buy Course</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>